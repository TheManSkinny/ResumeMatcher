@page
@model ResumeMatcher.Pages.AddJobModel
@{
    ViewData["Title"] = "Post a Job";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="page-title">
                    <i class="fas fa-plus-circle me-3"></i>Post a New Job
                </h1>
                <p class="page-subtitle">
                    Find the perfect candidates by posting your job opportunity on our platform
                </p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="modern-card">
                <div class="card-header-modern">
                    <div class="d-flex align-items-center">
                        <div class="section-icon me-3">
                            <i class="fas fa-briefcase"></i>
                        </div>
                        <div>
                            <h2 class="card-title-modern">Job Details</h2>
                            <p class="card-subtitle-modern">Provide comprehensive information about the position</p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group-modern">
                            <label asp-for="JobTitle" class="form-label-modern">
                                <i class="fas fa-briefcase me-2"></i>Job Title
                            </label>
                            <input asp-for="JobTitle" class="form-control-modern"
                                placeholder="e.g., Senior Software Engineer" />
                            <span asp-validation-for="JobTitle" class="text-danger"></span>
                        </div>

                        <div class="form-group-modern">
                            <label asp-for="Description" class="form-label-modern">
                                <i class="fas fa-align-left me-2"></i>Job Description
                            </label>
                            <textarea asp-for="Description" class="form-control-modern" rows="8"
                                placeholder="Describe the role, responsibilities, requirements, and benefits..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary-modern">
                                <i class="fas fa-paper-plane me-2"></i>Post Job Opportunity
                            </button>
                        </div>
                    </form>

                    @if (Model.Message != null)
                    {
                        <div class="alert-success-modern mt-4">
                            <i class="fas fa-check-circle me-2"></i>@Model.Message
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="modern-card mt-4">
                <div class="card-body text-center">
                    <h4 class="card-title-modern mb-3">What's Next?</h4>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <a href="/JobList" class="btn btn-outline-modern w-100">
                                <i class="fas fa-list me-2"></i>View All Jobs
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a href="/HRDashboard" class="btn btn-success-modern w-100">
                                <i class="fas fa-chart-bar me-2"></i>HR Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
