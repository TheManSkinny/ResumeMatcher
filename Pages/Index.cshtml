@page
@model ResumeMatcher.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to ResumeMatcher</h1>
    <p class="lead">Match your resume with the perfect job opportunities</p>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Upload Your Resume</h5>
                    <p class="card-text">Upload your CV and let our system analyze it for job matching.</p>
                    <a asp-page="/UploadCV" class="btn btn-primary">Upload CV</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Browse Job Listings</h5>
                    <p class="card-text">Explore available job opportunities and find your perfect match.</p>
                    <a asp-page="/JobList" class="btn btn-success">View Jobs</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Post a Job</h5>
                    <p class="card-text">Employers can post new job opportunities for candidates to discover.</p>
                    <a asp-page="/AddJob" class="btn btn-info">Post Job</a>
                </div>
            </div>
        </div>
    </div>
</div>
